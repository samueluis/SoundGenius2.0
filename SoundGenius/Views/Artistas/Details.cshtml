@model SoundGenius.Models.Artista


@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Artista</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-4">

        </dt>
        <dd class="col-sm-8">
            <img src="~/Imagens/Artistas/@Model.FicheiroImg" height="300" width="350" alt="imagem do artista @Model.Nome" title="@Model.Nome" />
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Sexo)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Sexo)
        </dd>

    </dl>
</div>
<h4>Lista de albuns associados a <i>@Model.Nome</i> </h4>

@if (Model.Albuns.Count == 0)
{
    <p>Não há Albuns associadas à faixa.</p>
}
else
{
    <table class="table">
        <tr>
            <th>Titulo</th>
        </tr>
        @foreach (var Albuns in Model.Albuns)
        { // listar todas as faixas Associadas aos albuns que está em exibição
            <tr>
                <td><a asp-controller="Albuns" asp-action="Details" asp-route-id="@Albuns.ID">
                     @Albuns.Titulo
                    </a>
                </td>
            </tr>
        }
    </table>
}



<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
