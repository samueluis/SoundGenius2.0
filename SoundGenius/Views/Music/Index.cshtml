@model IEnumerable<SoundGenius.Models.Faixas>

@{
    ViewData["Title"] = "Musicas";
}

    <h1>Lista de Músicas</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FicheiroImg)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Titulo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genero)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.ID">
                        <img src="~/Imagens/Faixas/@item.FicheiroImg" height="50" width="70" alt="imagem da faixa @item.Titulo" title="@item.Titulo" />
                    </a>
                </td>
                <td>
                  
                        <text> @*  também poderia ser usado o <div> ou <span>, em vez do <text>  *@
                                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                        </text>
                   

                </td>
            </tr>
        }
    </tbody>
</table>
