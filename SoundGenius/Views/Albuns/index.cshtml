@model IEnumerable<SoundGenius.Models.Albuns>

@{
    ViewData["Title"] = "Albuns";
}

<h1>Lista de álbuns</h1>

@*@if (User.IsInRole("gerente"))
{*@
    <p>
        <a asp-action="Create">Adicionar novo álbun</a>
    </p>
@*}*@
<table class="table">
    <thead>
        <tr>
            <th>
                Capa
            </th>
            <th>
                Nome
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genero)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-route-id="@item.ID">
                        <img src="~/Imagens/Albuns/@item.FicheiroImg" height="50" width="70" alt="imagem do Album @item.Titulo" title="@item.Titulo" />
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genero)
                </td>
                <td>

                    @Html.DisplayFor(modelItem => item.Titulo)
                    
                </td>
                <td>
                    @*@if (User.IsInRole("gerente"))
                    {*@
                        <a asp-action="Edit" asp-route-id="@item.ID">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
