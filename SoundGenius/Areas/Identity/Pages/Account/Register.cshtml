@page
@model RegisterModel
@{
    ViewData["Title"] = "Registar";
}

<h2>@ViewData["Title"]</h2>
<form asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <div class="row">
        <div class="col-md-12">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Input.Utilizadore.Nome"></label>
                    <input asp-for="Input.Utilizadore.Nome" class="form-control" />
                    <span asp-validation-for="Input.Utilizadore.Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Utilizadore.Telefone"></label>
                    <input asp-for="Input.Utilizadore.Telefone" class="form-control" />
                    <span asp-validation-for="Input.Utilizadore.Telefone" class="text-danger"></span>
                </div>


            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 text-right">
            <button type="submit" class="btn btn-primary">Registar</button>
        </div>
    </div>

</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
